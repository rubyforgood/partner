<div class="card mb-4">
  <h5 class="card-header bg-primary text-white">Diaper Request History</h5>
  <div class="card-body">
    <div class=container-fluid>
      <div class="row justify-content-around">
        <div class="col-6-lg">
          <h2>Below are the <%="#{@no_requests}"%> most recent diaper requests.</h2>
        </div>
        <div class="col-6-lg">
          <div class="actions">
            <% if @partner.verified? %>
              <%= link_to 'Create New Bulk Diaper Request', new_partner_request_path, class: 'btn btn-sm btn-primary' %>
            <% end %>
            <% if @partner.verified? && Flipper[:family_requests].enabled?(@partner) %>
              <%= link_to 'Create New Family Diaper Request', new_family_request_path, class: 'btn btn-sm btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
      <table class="table table-striped dashboard">
        <thead>
          <tr class="row">
            <th scope="col" class="col-1">No.</th>
            <th scope="col" class="col-6">Contents</th>
            <th scope="col" class="col text-right">Edit Pickup Sheet</th>
            <th scope="col" class="col">Request Date</th>
          </tr>
        </thead>

        <tbody>
          <% @partner_requests.each do |partner_request| %>
            <tr class="row">
              <td class="col-1"><%= link_to partner_request.id, partner_request_path(partner_request) %></th>
              <td class="col-6"><%= partner_request.item_requests.map {|item| "#{item.quantity} of #{item.name}"}.join(", ") %></td>
              <td class="col text-right"><%= link_to '<i class="fa fa-edit"></i>&nbsp;&nbsp;Pickup Sheet'.html_safe, family_request_pickup_sheets_path(partner_request), class: 'btn btn-sm btn-primary' %></td>
              <td class="col"><%= partner_request.created_at.strftime("%B %-d %Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>