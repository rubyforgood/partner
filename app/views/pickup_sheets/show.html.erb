<div class="app-title">
  <div>
    <h1><i class="fa fa-edit"></i> Pickup Sheet</h1>
  </div>
  <ul class="app-breadcrumb breadcrumb">
    <li class="breadcrumb-item"><i class="fa fa-scroll fa-lg"></i></li>
    <li class="breadcrumb-item"><a href="#">Pickup Sheet</a></li>
  </ul>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-12">
        <div class="card mb-12">
          <div id="flash-message-container-nested">
          </div>
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Child's name</th>
                <th scope="col">Authorized Persons</th>
                <th scope="col">Quantity Ordered</th>
                <th scope="col">Quantity Given</th>
                <th scope="col">Size Ordered</th>
                <th scope="col">Size Given</th>
                <th scope="col">Picked up</th>
              </tr>
            </thead>
            <tbody>
              <% child_item_requests.each do |child_item_request| %>
                <% child = child_item_request.child %>
                <tr>
                  <td><%= child.display_name %></td>
                  <td>
                    <%= child.family.authorized_family_members.map(&:display_name).join(", ") %>
                  </td>
                  <td><%= child_item_request.quantity %></td>
                  <td><%= "0" %></td>
                  <td><%= "XL" %></td>
                  <td><%= "XXL" %></td>
                  <td>
                    <div class="toggle lg">
                      <label>
                        <%= check_box_tag 'Picked Up',
                          child_item_request.picked_up,
                          child_item_request.picked_up, 
                          data: {
                            url: child_item_requests_toggle_picked_up_path(child_item_request.id),
                            remote: true,
                            method: :post
                          }
                        %>
                        <span class="button-indecator"></span>
                      </label>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
