<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <% content_for :title, "Diaper Requests - #{current_partner.name}" %>
        <h1><i class="fa fa-edit"></i>&nbsp;&nbsp;Diaper Requests
          <small>for <%= current_partner.name %></small>
        </h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to(dashboard_path) do %>
              <i class="fa fa-dashboard"></i> Home
            <% end %>
          </li>
          <li class="breadcrumb-item">
            <a href="<%= partner_path(current_partner) %>"><%= "#{current_partner.name}" %></a></li>
          <li class="breadcrumb-item"><a href="#">Diaper Requests</a></li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>


<section class="content">
  <div class="container-fluid">
    <div class="row">
      <!-- left column -->
      <div class="col-md-12">
        <!-- jquery validation -->
        <div class="card">
          <div class="card-footer">
            <% if @partner.verified? %>
              <%= link_to 'Create New Bulk Diaper Request', new_partner_request_path, class: 'btn btn-outline-primary' %>
              <%= link_to 'Create New Family Diaper Request', new_family_request_path, class: 'btn btn-outline-primary' %>
              <%= link_to 'Create New Individuals Diaper Request', new_individuals_request_path, class: 'btn btn-outline-primary' %>
            <% end %>
          </div>
        </div>
      </div>
      <!-- /.card -->
    </div>
    <!--/.col (left) -->
  </div>
  <!-- /.row -->
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- Default box -->
        <div class="card">
          <div class="card-header bg-info">
            <h1 class="card-title">Request History</h1>
          </div>
          <div class="card-body p-0">

            <table class="table">
              <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Contents</th>
                <th scope="col">Pickup Sheet</th>
                <th scope="col">Request Date</th>
              </tr>
              </thead>
              <tbody>
              <% @partner_requests.each do |partner_request| %>
                <tr>
                  <th scope="row"><%= link_to partner_request.id, partner_request_path(partner_request) %></th>
                  <td><%= partner_request.item_requests.map { |item| "#{item.quantity} of #{item.name}" }.join(", ") %></td>
                  <td>
                    <% if partner_request.for_families? %>
                      <%= link_to family_request_pickup_sheets_path(partner_request),
                                  class: 'btn btn-sm btn-info' do %>
                        <i class="fa fa-edit"></i> Pickup Sheet
                      <% end %>
                    <% end %>
                  </td>
                  <td><%= partner_request.created_at.strftime("%B %-d %Y") %></td>
                </tr>
                </tbody>
              <% end %>
              </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
